generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Record {
  id            String			@id @default(cuid())
  title         String?
  description   String?
  date          DateTime		@default(now())
  duration      Int				@default(0)//Duration in secs
  path          String?			@unique
  status        RecordStatus 	@default(RECORDING)
}

enum RecordStatus {
  DRAFT
  PUBLISHED
  RECORDING
}
